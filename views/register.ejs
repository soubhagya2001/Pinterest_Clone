<% include ./partials/header.ejs %>

<div
  class="w-full h-screen bg-center bg-cover bg-zinc-300 flex items-center justify-center"
>
  <div class="w-[25vw] h-fit bg-zinc-100 bg-white px-4 py-10 rounded-[30px]">
    <h1
      class="text-3xl text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="text"
        name="fullname"
        placeholder="Full Name"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="email"
        name="email"
        placeholder="Email"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2 no-spinners"
        type="number"
        name="contact"
        placeholder="Contact"
      />
      <input
        class="border-2 rounded-md block mt-2 w-full px-3 py-2"
        type="password"
        name="password"
        placeholder="Password"
      />
      <input
        class="border-2 rounded-full block mt-4 w-full px-3 py-2 bg-red-600 text-white rounded-full"
        type="submit"
        value="Create New Account"
      />
      <a
        class="inline-block mt-3 text-sm font-semibold text-zinc-700 text-center w-full"
        href="/"
        >Login Existing Account</a
      >
      <p
        class="text-xs font-semibold text-zinc-700 mt-3 w-3/4 mx-auto text-center"
      >
        By continuing you will agree to pinterest's terms of services and
        acknowledge that you've read our Privacy Policy
      </p>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>
